generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(uuid())
  name                String
  email               String               @unique
  password            String
  createdDocuments    Document[]           @relation("DocumentCreator")
  permissionDocuments Document[]           @relation("DocumentPermissions")
  DocumentPermission  DocumentPermission[]
}

model Document {
  id                 String               @id @default(uuid())
  title              String
  content            String               @default("")
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  ownerId            String
  owner              User                 @relation("DocumentCreator", fields: [ownerId], references: [id])
  sharedWith         User[]               @relation("DocumentPermissions")
  DocumentPermission DocumentPermission[]
}

model DocumentPermission {
  id         String   @id @default(uuid())
  userId     String
  documentId String
  accessType String // e.g., "read", "edit", "comment"
  user       User     @relation(fields: [userId], references: [id])
  document   Document @relation(fields: [documentId], references: [id])
}
